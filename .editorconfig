# EditorConfig: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Various options
trim_trailing_whitespace = true

[*.{c,h}]
# 4 space indentation
#tab_width = 4
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
tab_width = 4
